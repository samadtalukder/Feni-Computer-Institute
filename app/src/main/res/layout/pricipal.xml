<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >




        <ImageView
            android:id="@+id/imageView1"
            android:padding="20dp"
            android:layout_margin="20dp"
            android:scaleType="center"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/princ" />

        <View
            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:background="#000000"
            android:layout_marginTop="2dp"
            android:layout_height="2dp" />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MD ABDUL MANNAN Principal Of Feni Computer Institute"
            android:textColor="#5f0020"
            android:padding="15dp"
            android:layout_margin="5dp"
            android:fontFamily="arial"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <View
            android:id="@+id/view2"
            android:layout_width="wrap_content"
            android:background="#000000"
            android:layout_height="2dp" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="@string/principal"
            android:padding="15dp"
            android:fontFamily="arial"
            android:lineSpacingExtra="8dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:background="@drawable/design"
            />

        <View
            android:id="@+id/view3"
            android:layout_width="wrap_content"
            android:background="#000000"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#5f0020"
            android:text="Contact Information"
            android:padding="15dp"
            android:fontFamily="arial"
            android:textStyle="bold"
            android:textSize="20sp" />

        <View
            android:id="@+id/view4"
            android:layout_width="wrap_content"
            android:background="#000000"
            android:layout_height="2dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="@string/contuct"
            android:textColor="#000"
            android:padding="7dp"
            android:layout_marginTop="6dp"
            android:fontFamily="arial"
            android:autoLink="email"
            android:background="@drawable/design"
            android:textSize="20sp" />

        <View
            android:id="@+id/view5"
            android:layout_width="wrap_content"
            android:background="#000000"
            android:layout_height="2dp"
            android:layout_marginTop="20dp" />
        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6">

            <Button
                android:id="@+id/mail2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:autoLink="email"
                android:onClick="call"
                android:background="@drawable/mail_icon" />

            <Button
                android:id="@+id/intr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/web"
                android:onClick="call" />

            <Button
                android:id="@+id/phn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"

                android:background="@drawable/telephone"
                android:onClick="call" />

        </LinearLayout>

    </LinearLayout>


</ScrollView>
