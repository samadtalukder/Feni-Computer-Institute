<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/back"

    >

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@id/textView1"
            android:background="#C9C9C9"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Software Developed By :" />

        <TextView
            android:id="@+id/Blank"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold"
            android:gravity="left"
            android:id="@+id/samad"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="SAMAD TALUKDAR" />

        <TextView
            android:textSize="16.0sp"
            android:id="@id/textView12"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40.0dip"
            android:text="Diploma In Data Telecommunication Networking" />
        <TextView
            android:textSize="16.0sp"
            android:id="@id/textView12"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40.0dip"
            android:text="Feni Computer Institute" />
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/my"
            />
        <TextView
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold"
            android:gravity="left"
            android:id="@+id/number"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Mobile Number" />
        <TextView
            android:textSize="16.0sp"
            android:id="@id/textView12"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40.0dip"
            android:text="01967612240" />
        <TextView
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold"
            android:gravity="left"
            android:id="@+id/email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="E-mail Address" />
        <TextView
            android:textSize="16.0sp"
            android:id="@id/textView12"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40.0dip"
            android:text="samadtalukdar6@gmail.com" />
        <TextView
            android:textSize="16.0sp"
            android:id="@id/textView12"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40.0dip"
            android:text="samadtalukdar20@yahoo.com" />
        <TextView
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold"
            android:gravity="left"
            android:id="@+id/social"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Social Network" />
        <TextView
            android:textSize="16.0sp"
            android:id="@id/textView12"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40.0dip"
            android:text="Facebook ID:Samurai.X.008" />
        <TextView
            android:textSize="16.0sp"
            android:id="@id/textView12"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40.0dip"
            android:text="Twitter ID:SamadTalukdar" />
        <TextView
            android:textSize="16.0sp"
            android:id="@id/textView12"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40.0dip"
            android:text="Skype ID:Samad.talukdar3" />


        <View
            android:id="@+id/view2"
            android:layout_width="wrap_content"
            android:background="#000000"
            android:layout_height="2dp"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6"
            >



            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/icon"
                android:layout_weight="2"
                android:id="@+id/phone"
                android:onClick="call"
                />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/facebook"
                android:layout_weight="2"
                android:id="@+id/fb"
                android:onClick="call"
                />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mail_icon"
                android:layout_weight="2"
                android:id="@+id/mail"
                android:onClick="call"
                />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
